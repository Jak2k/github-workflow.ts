{
  "name": "@wardellbagby/gh-workflow-gen",
  "version": "1.0.1",
  "description": "Generate GitHub Workflows based on JavaScript or TypeScript templates.",
  "author": "Wardell Bagby",
  "homepage": "https://github.com/wardellbagby/gh-workflow-gen",
  "repository": {
    "type": "git",
    "url": "https://github.com/wardellbagby/gh-workflow-gen"
  },
  "files": [
    "src",
    "dist",
    "examples"
  ],
  "keywords": [
    "github workflows",
    "github",
    "workflow",
    "gh"
  ],
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "cd src/ && tsc",
    "pretest": "npm run build && npm link && npm link @wardellbagby/gh-workflow-gen",
    "test": "node --no-warnings --loader ts-node/esm test/test_runner.ts",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "build:actions": "npm run build && node --no-warnings --loader ts-node/esm scripts/generate_workflows.ts"
  },
  "exports": {
    "import": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=14.18.0"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.6",
    "husky": "^8.0.3",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}